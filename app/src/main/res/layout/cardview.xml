<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
            android:id="@+id/cardview"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

    <com.daimajia.swipe.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:id="@+id/swipelayout_1"
        android:layout_width="match_parent"
        android:background="@color/white">

        <!-- Bottom View Start-->
        <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="160dp"
        android:weightSum="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

            <TextView
            android:id="@+id/tvShare"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/gallery_color"
            android:gravity="center"
            android:text="Share"
            android:textColor="#FFFFFF" />

            <TextView
            android:id="@+id/tvDelete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/camera_color"
            android:gravity="center"
            android:text="Delete"
            android:textColor="#FFFFFF"
            />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp"
                >


                <View
                    android:id="@+id/cirle_popup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circleinpopup"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HEX_color"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:layout_below="@+id/RGB_color"
                    android:textColor="#000"
                    />
                <!--android:layout_toRightOf="@+id/cirle_popup"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/RGB_color"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:textColor="#000"
                    />

            </RelativeLayout>

    </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>

</android.support.v7.widget.CardView>



